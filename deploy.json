{
    "Title": "Skaioskit Auth Service",
    "Commands": {
        "_build": {
            "Requires": [],
            "Steps": [
                {
                    "Type": "RunCommand",
                    "Args": {
                        "Command": [
                            "docker",
                            "run",
                            "--rm",
                            "-v",
                            "${DIR}/src:/go/src/skaioskit",
                            "-w",
                            "/go/src/skaioskit",
                            "lushdigital/docker-golang-dep",
                            "ensure"
                        ]
                    }
                },
                {
                    "Type": "RunCommand",
                    "Args": {
                        "Command": [
                            "docker",
                            "run",
                            "--rm",
                            "-v",
                            "${DIR}/src:/go/src/skaioskit",
                            "-w",
                            "/go/src/skaioskit",
                            "golang:latest",
                            "go",
                            "build",
                            "-ldflags",
                            "-linkmode external -extldflags -static",
                            "-o",
                            "auth"
                        ]
                    }
                }
            ]
        },

        "_pack": {
            "Requires": [],
            "Steps": [
                {
                    "Type": "RunCommand",
                    "Args": {
                        "Command": [
                            "docker",
                            "build",
                            "-f",
                            "./Dockerfile",
                            "-t",
                            "localhost:5000/skaioskit/auth-service",
                            "."
                        ]
                    }
                }
            ]
        },

        "_upload": {
            "Requires": [],
            "Steps": [
                {
                    "Type": "RunCommand",
                    "Args": {
                        "Command": [
                            "docker",
                            "push",
                            "localhost:5000/skaioskit/auth-service"
                        ]
                    }
                }
            ]
        },

        "build": {
            "Requires": ["_build", "_pack", "_upload"],
            "Steps": []
        }
    }
}
